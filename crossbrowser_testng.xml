<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Cross-browser testing suite">
    <listeners>
        <listener class-name="com.qalegend.listeners.TestListener"/>
    </listeners>
    <test name="chrome test">
        <parameter name="browser" value="chrome"/>
        <groups>
            <run>
                <include name="Regression"/>
                <exclude name="Sanity"/>
                <exclude name="Smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.qalegend.testscript.HomeTest">
            <methods>
                <include name="TC006_verifyHomePageTitle"/>
                <exclude name="TC007_verifyDateIsDisplayed"/>
            </methods>
            </class>
        </classes>
    </test>
    <test name="edge test">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.qalegend.testscript.HomeTest">
                <methods>
                    <include name="TC006_verifyHomePageTitle"/>
                    <exclude name="TC007_verifyDateIsDisplayed"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>